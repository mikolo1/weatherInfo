<configuration>
    ​
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yyyy-MM-dd' 'HH:mm:ss' '}]	[%C] [%t] [%L] [%p] %m%n</pattern>
<!--            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>-->
        </encoder>
    </appender>
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder>
            <pattern>
                [%d{yyyy-MM-dd' 'HH:mm:ss' '}]	[%C] [%t] [%L] [%p] %m%n
            </pattern>
        </encoder>
        <file>C:/Users/Mikołaj/IdeaProjects/weathertemp/.logs/usersapp.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>
                C:/Users/Mikołaj/IdeaProjects/weathertemp/.logs/archived/usersapp_%d{yyyy-MM-dd}_%i.log
            </fileNamePattern>
            <maxFileSize>2MB</maxFileSize>
            <maxHistory>10</maxHistory>
            <totalSizeCap>25MB</totalSizeCap>
        </rollingPolicy>
    </appender>
    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>
    <logger name="org.hibernate" additivity="false" level="DEBUG">
        <appender-ref ref="STDOUT"/>
<!--        <appender-ref ref="FILE"/>-->
    </logger>
    <logger name="org.springframework.web" additivity="false" level="INFO">
        <appender-ref ref="STDOUT"/>	<!-- te logi od razu mają trafic do pliku -->
    </logger>
    <logger name="pl.mikolo" additivity="false" level="DEBUG">
        <appender-ref ref="STDOUT"/>
<!--        <appender-ref ref="FILE"/>-->
    </logger>
</configuration>